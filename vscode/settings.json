            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "xelatex ðŸ”ƒ",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "pdflatexâžžbibtexâžžpdflatex.2x ðŸ”ƒ",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "xelatexâžžbibtexâžžxelatex.2x ðŸ”ƒ",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "latex-workshop.bibtex-format.sortby": [
        "year",
        "author"
    ],
}
